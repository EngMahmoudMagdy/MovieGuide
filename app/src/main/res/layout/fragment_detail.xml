<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/details_fragment"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mmagdy_pc.movieguide.DetailActivityFragment"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="#00c8ff"
                android:orientation="vertical"
                android:weightSum="1">

                        <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/title"
                        android:text="Title here"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                            android:layout_weight="0.19"
                            android:gravity="bottom|center"
                            android:textSize="20dp" />
                </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/date"

        android:layout_alignTop="@+id/imageView"
        android:layout_alignLeft="@+id/rates"
        android:layout_alignStart="@+id/rates" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/rates"
        android:layout_below="@+id/date"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜…"
                android:id="@+id/button"
                android:layout_marginTop="50dp"
                android:textColor="#000"
                android:textSize="40dp"
                android:layout_gravity="right" />

            <ImageView
        android:layout_width="185dp "
        android:layout_height="277dp"
        android:id="@+id/imageView"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/overView"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trailers: "
                android:layout_below="@+id/overView"
                android:id="@+id/trailer_title"
                android:layout_marginTop="20dp"
                />



                <ListView

                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:id = "@+id/listview_trailer"
                    android:layout_below="@+id/trailer_title"
                    android:layout_marginTop="20dp"
                     />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/review_title"
                android:layout_below="@+id/listview_trailer"
                android:layout_marginTop="20dp"
                />



                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id = "@+id/textview_review"
                    android:layout_below="@+id/review_title"
                    android:layout_marginTop="20dp"
                    />




    </LinearLayout>
</ScrollView>
</RelativeLayout>
